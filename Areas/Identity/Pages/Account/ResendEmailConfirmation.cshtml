@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar Confirmación de Correo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <!-- Título de la página con estilo llamativo -->
            <h1 class="text-center display-6 text-primary font-weight-bold">@ViewData["Title"]</h1>
            <p class="text-center text-muted">Ingresa tu correo electrónico para recibir nuevamente la confirmación.</p>
            <hr />

            <!-- Formulario para reenviar confirmación -->
            <form method="post" class="p-4 shadow-sm rounded-3" style="background-color: #fff;">
                <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                
                <!-- Campo de Email -->
                <div class="form-floating mb-4">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Correo Electrónico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Botón de Enviar -->
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar Confirmación</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #f0f4f8;
    }

    .text-primary {
        color: #004085 !important;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-control:focus {
        border-color: #004085;
        box-shadow: 0 0 5px #004085;
    }

    .btn-primary {
        background-color: #ffffff;
        color: #0056b3;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>

